<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Celular</th>
      <th>Dirección</th>
      <th>Punto de referencia</th>
      <th>Ocación</th>
      <th>Hora</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.celular %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.referenciadir %></td>
        <td><%= cliente.ocacion %></td>
        <td><%= cliente.hora %></td>
        <td><%= cliente.valor %></td>
        <td><%= link_to 'VER', cliente %></td>
        <td><%= link_to 'EDITAR', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'ELIMINAR', cliente, method: :delete, data: { confirm: 'Quiere eliminarlo?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>
